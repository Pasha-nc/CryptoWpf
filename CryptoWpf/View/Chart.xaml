<Window x:Class="CryptoWpf.View.Chart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoWpf.View"
        xmlns:fc="clr-namespace:FancyCandles;assembly=FancyCandles"
        mc:Ignorable="d"
        Title="Chart" Height="450" Width="600">
    <Grid>
        <fc:CandleChart Grid.Row="1" LegendText="BTC/USDT" CandlesSource="{Binding Path=Candles}"/>
    </Grid>
</Window>
